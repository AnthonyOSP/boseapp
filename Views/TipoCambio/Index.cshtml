#nullable disable

@model boseapp.ViewModel.TipoCambioViewModel

@{
    ViewBag.Title = "Tipo de Cambio";
    var symbols = ViewData["symbols"] as Dictionary<string, string>;
}

<div class="container">
    <h1 class="text-center mb-4">Formulario de Tipo Cambio</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="TipoCambio" asp-action="Exchange" method="post">
                <div class="form-group">
                    <label asp-for="From" class="control-label mt-2"></label>
                    <select asp-for="From" class="form-control mt-2">
                        @foreach (var symbol in symbols)
                        {
                            <option value="@symbol.Key">@symbol.Value</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="To" class="control-label mt-2"></label>
                    <select asp-for="To" class="form-control mt-2">
                        @foreach (var symbol in symbols)
                        {
                            <option value="@symbol.Key">@symbol.Value</option>
                        }
                    </select>

                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label mt-2"></label>
                    <input asp-for="Amount" class="form-control" />
                </div>
                <div class="form-group text-center mt-2">
                    <button type="submit" class="btn btn-primary">Exchange</button>
                </div>
            </form>
            <h1 class="mt-4">Tipo Cambio: @ViewData["rate"]</h1>
            <h1 class="mt-4">Cambio Total: @ViewData["result"]</h1>
            <div>
                <a asp-action="Index">Regresar</a>
            </div>
        </div>
    </div>
</div>