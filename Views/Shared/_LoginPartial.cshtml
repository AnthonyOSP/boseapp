@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserCliente> SignInManager
@inject UserManager<UserCliente> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="color:whitesmoke">
            <a class="nav-link nav-text-welcome text-light" asp-area="Identity" asp-page="/Account/Manage/Index"
                title="Manage">Bienvenido
                @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link btn-light text-dark ">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-lg btn-light text-dark" asp-area="Identity"
                asp-page="/Account/LoginRegister">Ingresar</a>
        </li>
    }
</ul>

<style>
    .navbar-nav {
        display: flex;
        align-items: center;
        align-content: center;
        font-size: 1.2em;
    }
</style>
