@model boseapp.ViewModel.ContactoViewModel

@{
    ViewData["Title"] = "Contacto";
}

<div class="container">
    <h1 class="text-center mb-4">Formulario de Contacto</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="contactForm" asp-controller="Contacto" asp-action="Enviar" method="post">
                <div class="form-group mb-3">
                    <label asp-for="FormContacto.Nombre" class="control-label">Nombre</label>
                    <input asp-for="FormContacto.Nombre" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="FormContacto.Email">Correo Electr√≥nico</label>
                    <input asp-for="FormContacto.Email" type="email" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="FormContacto.Message">Mensaje</label>
                    <textarea asp-for="FormContacto.Message" class="form-control" required></textarea>
                </div>
                <div class="form-group text-center mb-3">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </form>
            @if (ViewData["Message"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewData["Message"]
                </div>
            }
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="tabla-responsive">
                <table class="table table-bordered">
                    <thead>
                        <td>Email</td>
                        <td>Message</td>
                    </thead>
                    <tbody>
                        @if (Model.ListContacto != null)
                        {
                            foreach (var item in Model.ListContacto)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Message)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>